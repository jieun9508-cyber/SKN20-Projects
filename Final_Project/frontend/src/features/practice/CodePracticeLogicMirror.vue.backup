<template>
  <div class="flex h-screen bg-[#0d1117] text-slate-300 font-sans overflow-hidden relative">
    <!-- Tutorial Overlay -->
    <div
      v-if="showTutorial"
      class="absolute inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4"
    >
      <div
        class="bg-[#161b22] border border-slate-700 w-full max-w-md rounded-3xl shadow-2xl overflow-hidden animate-in zoom-in-95 duration-300"
      >
        <div class="p-8">
          <div class="flex justify-between items-start mb-6">
            <div class="p-3 bg-indigo-500/10 rounded-2xl">
              <component :is="tutorialContent[tutorialStep].icon" class="w-6 h-6 text-indigo-400" />
            </div>
            <button @click="showTutorial = false" class="text-slate-500 hover:text-white">
              <X class="w-5 h-5" />
            </button>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">
            {{ tutorialContent[tutorialStep].title }}
          </h2>
          <p class="text-sm text-slate-400 leading-relaxed mb-8">
            {{ tutorialContent[tutorialStep].desc }}
          </p>

          <div class="flex items-center justify-between">
            <div class="flex gap-1">
              <div
                v-for="(_, i) in tutorialContent"
                :key="i"
                :class="[
                  'h-1 rounded-full transition-all',
                  i === tutorialStep ? 'w-6 bg-indigo-500' : 'w-2 bg-slate-700',
                ]"
              />
            </div>
            <button
              @click="handleTutorialNext"
              class="bg-indigo-600 hover:bg-indigo-500 text-white px-5 py-2 rounded-xl text-sm font-bold flex items-center gap-2 transition-all shadow-lg shadow-indigo-900/20"
            >
              {{ tutorialStep === tutorialContent.length - 1 ? '시작하기' : '다음으로' }}
              <ChevronRight class="w-4 h-4" />
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar: Interview Chat -->
    <div class="w-1/3 flex flex-col border-r border-slate-800 bg-[#161b22]">
      <div class="p-4 border-b border-slate-800 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div
            :class="[
              'w-2 h-2 rounded-full',
              isAnalyzing ? 'bg-amber-500 animate-pulse' : 'bg-emerald-500',
            ]"
          />
          <h1 class="text-xs font-bold tracking-widest text-slate-400 uppercase">
            Interactive Interview
          </h1>
        </div>
        <button
          @click="handleOpenTutorial"
          class="p-1.5 hover:bg-slate-800 rounded-lg transition-colors"
        >
          <HelpCircle class="w-4 h-4 text-slate-500" />
        </button>
      </div>

      <div class="flex-1 overflow-y-auto p-4 space-y-4">
        <div
          v-for="(msg, i) in chatHistory"
          :key="i"
          :class="['flex', msg.role === 'user' ? 'justify-end' : 'justify-start']"
        >
          <div
            :class="[
              'max-w-[85%] p-3 rounded-2xl text-[13px] leading-relaxed shadow-sm',
              msg.role === 'user'
                ? 'bg-indigo-600 text-white'
                : 'bg-slate-800 border border-slate-700 text-slate-200',
            ]"
          >
            {{ msg.content }}
          </div>
        </div>
        <div v-if="isAnalyzing" class="flex justify-start">
          <div class="bg-slate-800/50 p-3 rounded-xl flex items-center gap-2 text-[11px] text-slate-500">
            <Loader2 class="w-3 h-3 animate-spin" /> 면접관이 분석 중...
          </div>
        </div>
        <div ref="chatEndRef" />
      </div>

      <div class="p-4 border-t border-slate-800 bg-[#0d1117]">
        <p class="text-[10px] text-slate-500 mb-2 ml-1 italic">
          * 채팅 답변 시 에디터 내용도 함께 분석됩니다.
        </p>
        <div class="relative">
          <input
            v-model="userInput"
            @keydown.enter="handleSendMessage"
            :disabled="isAnalyzing"
            :placeholder="isAnalyzing ? '분석 중...' : '말로 대답하고 Enter...'"
            class="w-full bg-slate-900 border border-slate-700 rounded-xl py-3 px-4 pr-12 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/50 transition-all disabled:opacity-50"
          />
          <button @click="handleSendMessage" :disabled="isAnalyzing" class="absolute right-3 top-3">
            <Send
              :class="[
                'w-5 h-5 transition-all',
                isAnalyzing ? 'text-slate-700' : 'text-indigo-500 hover:text-indigo-400',
              ]"
            />
          </button>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
      <!-- Pseudo Code Editor -->
      <div class="h-1/2 flex flex-col border-b border-slate-800 relative">
        <div class="p-3 bg-[#161b22] border-b border-slate-800 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <PlayCircle class="w-4 h-4 text-indigo-400" />
            <span class="text-[11px] font-bold text-slate-400 uppercase tracking-widest">
              {{ structure.current_phase === 'NATURAL_LANGUAGE'
                ? 'Step 1: 생각 정리 (자연어)'
                : 'Step 2: 로직 설계 (의사코드)' }}
            </span>
          </div>
          <div class="flex items-center gap-3">
            <div class="flex gap-1.5 mr-2">
              <span
                :class="[
                  'w-1.5 h-1.5 rounded-full',
                  structure.current_phase === 'NATURAL_LANGUAGE' ? 'bg-indigo-500' : 'bg-slate-700',
                ]"
              />
              <span
                :class="[
                  'w-1.5 h-1.5 rounded-full',
                  structure.current_phase === 'PSEUDO_CODE' ? 'bg-emerald-500' : 'bg-slate-700',
                ]"
              />
            </div>
            <button
              @click="handleEditorSubmit"
              :disabled="isAnalyzing"
              class="flex items-center gap-2 px-3 py-1.5 bg-indigo-600 hover:bg-indigo-500 disabled:bg-slate-800 text-white rounded-lg text-[11px] font-bold transition-all shadow-lg shadow-indigo-900/20"
            >
              <Loader2 v-if="isAnalyzing" class="w-3 h-3 animate-spin" />
              <Sparkles v-else class="w-3 h-3" />
              분석 시작
            </button>
          </div>
        </div>
        <div class="relative flex-1 group">
          <textarea
            v-model="pseudoCode"
            :disabled="isAnalyzing"
            class="w-full h-full bg-[#0d1117] p-8 font-mono text-[13px] leading-7 focus:outline-none text-blue-100/70 resize-none selection:bg-indigo-500/30 transition-opacity"
            :class="isAnalyzing ? 'opacity-50' : 'opacity-100'"
            spellcheck="false"
          />
          <div
            v-if="!isAnalyzing && pseudoCode.includes('먼저 말로 설명해 보세요')"
            class="absolute top-20 left-8 pointer-events-none text-slate-600 italic text-[13px]"
          >
            이곳에 당신의 생각을 자유롭게 적고 우측 상단의 '분석 시작'을 누르세요...
          </div>
        </div>
      </div>

      <!-- Reasoning Visualizer -->
      <div class="h-1/2 bg-[#0d1117] p-8 overflow-y-auto">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] flex items-center gap-2">
            <GitMerge class="w-4 h-4 text-indigo-500" /> Logic Progress
          </h2>
          <div class="flex flex-col items-end">
            <span class="text-[10px] text-slate-600 uppercase font-bold mb-1">성공 가능성</span>
            <div class="text-2xl font-black text-indigo-400 mono">
              {{ Math.round(structure.confidence * 100) }}%
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div
            :class="[
              'space-y-4 transition-all duration-700',
              isAnalyzing ? 'blur-[2px] scale-[0.98]' : 'blur-0 scale-100',
            ]"
          >
            <div
              v-for="item in logicSteps"
              :key="item.key"
              :class="[
                'p-4 rounded-xl border transition-all duration-500 flex items-center justify-between',
                isActiveComponent(item.key)
                  ? 'bg-indigo-500/10 border-indigo-500/40 shadow-lg'
                  : 'bg-slate-900/40 border-slate-800 opacity-40',
              ]"
            >
              <div class="flex items-center gap-4">
                <div
                  :class="[
                    'p-2 rounded-lg',
                    isActiveComponent(item.key)
                      ? 'bg-indigo-500/20 text-indigo-400'
                      : 'bg-slate-800 text-slate-600',
                  ]"
                >
                  <component :is="item.icon" class="w-3 h-3" />
                </div>
                <div
                  :class="[
                    'text-xs font-bold',
                    isActiveComponent(item.key) ? 'text-slate-100' : 'text-slate-600',
                  ]"
                >
                  {{ item.label }}
                </div>
              </div>
              <div
                v-if="isActiveComponent(item.key)"
                class="w-1.5 h-1.5 rounded-full bg-indigo-400 animate-pulse shadow-[0_0_8px_rgba(129,140,248,0.8)]"
              />
            </div>
          </div>

          <div class="space-y-6">
            <div class="bg-indigo-500/5 border border-indigo-500/10 rounded-2xl p-6">
              <h3
                class="text-[10px] font-black text-indigo-400/70 uppercase tracking-widest mb-4 flex items-center gap-2"
              >
                <BrainCircuit class="w-3.5 h-3.5" /> 면접 가이드
              </h3>
              <div class="space-y-4 min-h-[100px] flex flex-col justify-center">
                <div v-if="isAnalyzing" class="flex flex-col items-center gap-3 py-4">
                  <Loader2 class="w-5 h-5 animate-spin text-indigo-500" />
                  <span class="text-[11px] text-slate-500 font-medium">
                    당신의 논리 체계를 검토하고 있습니다...
                  </span>
                </div>
                <template v-else>
                  <div
                    v-if="structure.missing_slots.length > 0"
                    v-for="(slot, i) in structure.missing_slots"
                    :key="`slot-${i}`"
                    class="text-[12px] text-slate-400 flex gap-3 leading-relaxed animate-in slide-in-from-left-2"
                  >
                    <span class="text-indigo-500 font-bold">•</span>
                    <span>
                      {{
                        slot === 'termination'
                          ? '언제 확인을 멈추면 좋을지 고민해 보세요.'
                          : slot === 'update'
                            ? '찾은 값을 어디에 적어둘 것인지 설명해 주세요.'
                            : '로직을 조금 더 구체적으로 설명해 볼까요?'
                      }}
                    </span>
                  </div>
                  <div
                    v-else
                    class="text-[12px] text-emerald-400 font-bold flex items-center gap-2"
                  >
                    <CheckCircle2 class="w-4 h-4" />
                    완벽해요! 이제 이 생각을 실제 코드로 옮겨볼까요?
                  </div>
                </template>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
import { ref, watch, nextTick } from 'vue';
import {
  Send,
  AlertCircle,
  CheckCircle2,
  GitMerge,
  Zap,
  BrainCircuit,
  Loader2,
  MessageSquare,
  X,
  ChevronRight,
  HelpCircle,
  PlayCircle,
  Sparkles,
} from 'lucide-vue-next';

// API key is handled by the environment
const apiKey = import.meta.env.VITE_GEMINI_API_KEY || '';

const showTutorial = ref(true);
const tutorialStep = ref(0);
const pseudoCode = ref(
  `// 1단계: 먼저 말로 설명해 보세요.\n// 예: 우유를 왼쪽부터 하나씩 보면서 유통기한을 비교한다.`
);
const chatHistory = ref([
  {
    role: 'interviewer',
    content:
      '반갑습니다! 마트 우유 문제를 같이 풀어볼까요? 너무 어렵게 생각하지 마세요.\n\n우선 코드를 짜기 전에, "어떤 순서로 우유를 확인하고 고를 것인지" 편하게 말로 설명해 주시겠어요?',
  },
]);
const structure = ref({
  components: [],
  missing_slots: ['logic_flow', 'decision_criteria'],
  confidence: 0.1,
  current_phase: 'NATURAL_LANGUAGE',
});
const userInput = ref('');
const isAnalyzing = ref(false);
const chatEndRef = ref(null);

const tutorialContent = [
  {
    title: '마트 우유 문제란?',
    desc: '여러 개의 우유 중 유통기한이 가장 임박한 우유 하나를 찾는 로직을 설계하는 문제입니다. 모든 우유를 다 봐야 할까요? 아니면 중간에 멈출 수 있을까요?',
    icon: MessageSquare,
  },
  {
    title: 'Step 1: 말로 설명하기',
    desc: '왼쪽 채팅창에 답변을 적거나, 상단 에디터에 생각을 자유롭게 적어보세요. 적은 내용을 제출하면 면접관이 분석을 시작합니다.',
    icon: BrainCircuit,
  },
  {
    title: 'Step 2: 로직 그래프 확인',
    desc: '분석이 끝나면 우측 하단의 그래프가 채워집니다. 어떤 부분이 부족한지 면접관의 꼬리 질문을 통해 확인해 보세요.',
    icon: GitMerge,
  },
];

const logicSteps = [
  { key: 'SCAN', label: '하나씩 확인하기', icon: MessageSquare },
  { key: 'COMPARE', label: '비교 기준 세우기', icon: Zap },
  { key: 'UPDATE', label: '가장 좋은 것 기억하기', icon: CheckCircle2 },
  { key: 'STOP', label: '적절할 때 멈추기', icon: AlertCircle },
];

const retryWithExponentialBackoff = async (fn, retries = 5, delay = 1000) => {
  try {
    return await fn();
  } catch (error) {
    if (retries <= 0) throw error;
    await new Promise((resolve) => setTimeout(resolve, delay));
    return retryWithExponentialBackoff(fn, retries - 1, delay * 2);
  }
};

const analyzeWithLLM = async (currentCode, userText) => {
  if (!apiKey) {
    chatHistory.value.push({
      role: 'interviewer',
      content: 'API 키가 설정되어 있지 않아요. 환경 변수(VITE_GEMINI_API_KEY)를 확인해 주세요.',
    });
    return;
  }

  isAnalyzing.value = true;
  const systemPrompt = `당신은 초보자를 배려하는 알고리즘 면접관입니다. 
    사용자가 '마트 우유 문제'를 단계적으로 풀 수 있게 돕습니다.
    응답 형식(JSON):
    {
      "detected_structures": ["LOOP", "COMPARE"],
      "missing_slots": ["termination", "update"],
      "confidence": 0.5,
      "current_phase": "NATURAL_LANGUAGE" 또는 "PSEUDO_CODE",
      "interviewer_reply": "친절한 격려와 함께 다음 단계를 유도하는 질문"
    }`;

  const userQuery = `사용자 답변: ${userText}\n현재 적힌 에디터 내용:\n${currentCode}\n현재 단계: ${structure.value.current_phase}`;

  try {
    const response = await retryWithExponentialBackoff(() =>
      fetch(
        `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
        {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            contents: [{ parts: [{ text: userQuery }] }],
            systemInstruction: { parts: [{ text: systemPrompt }] },
            generationConfig: { responseMimeType: 'application/json' },
          }),
        }
      ).then((res) => res.json())
    );

    const result = JSON.parse(response?.candidates?.[0]?.content?.parts?.[0]?.text || '{}');

    structure.value = {
      ...structure.value,
      components: result.detected_structures || [],
      missing_slots: result.missing_slots || [],
      confidence: typeof result.confidence === 'number' ? result.confidence : structure.value.confidence,
      current_phase: result.current_phase || structure.value.current_phase,
    };

    if (result.interviewer_reply) {
      chatHistory.value.push({ role: 'interviewer', content: result.interviewer_reply });
    }
  } catch (error) {
    chatHistory.value.push({
      role: 'interviewer',
      content: '분석 중에 잠시 혼선이 생겼어요. 다시 한 번 제출해 주시겠어요?',
    });
  } finally {
    isAnalyzing.value = false;
  }
};

const handleSendMessage = () => {
  if (!userInput.value.trim() || isAnalyzing.value) return;
  const text = userInput.value;
  chatHistory.value.push({ role: 'user', content: text });
  userInput.value = '';
  analyzeWithLLM(pseudoCode.value, text);
};

const handleEditorSubmit = () => {
  if (isAnalyzing.value) return;
  analyzeWithLLM(pseudoCode.value, '에디터에 적힌 내용을 바탕으로 분석해 주세요.');
};

const handleOpenTutorial = () => {
  tutorialStep.value = 0;
  showTutorial.value = true;
};

const handleTutorialNext = () => {
  if (tutorialStep.value < tutorialContent.length - 1) {
    tutorialStep.value += 1;
  } else {
    showTutorial.value = false;
  }
};

const isActiveComponent = (key) =>
  (structure.value.components || []).some((c) => key.includes(c));

watch(
  chatHistory,
  async () => {
    await nextTick();
    chatEndRef.value?.scrollIntoView({ behavior: 'smooth' });
  },
  { deep: true }
);
</script>
