FROM python:3.10-slim

# 필수 시스템 패키지 설치 (gcc 등 빌드 도구 포함 가능성 대비)
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 데이터 사이언스 라이브러리 미리 설치
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    scikit-learn

# 실행 시 별도 명령 없이 대기 (stdin 입력을 받기 위함)
CMD ["python3"]
